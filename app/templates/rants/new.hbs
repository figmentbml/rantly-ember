<main id="scroll">
  <form class="rant-form">
    <header class="rant-header">
      <div class="rant-header-title">
        {{input class="rant-header-focus" placeholder="Rant Title" autofocus="true" value=titleCopy}}
      </div>
      <div class="rant-action">
        <button class="button" {{action 'newRant'}}>
          <i class="fa fa-save"></i> Save
        </button>
        <button class="button button-default" {{action 'cancelRant'}}>
          <i class="fa fa-share-square-o"></i> Cancel
        </button>
      </div>
    </header>
    <aside>
      <div style="background-image: url(http://www.gravatar.com/avatar/)" class="user-photo">
      </div>
      {{#if bodyCopy}}
        {{bodyCopy.length}}
      {{else}}
        0 
      {{/if}}
      Characters
    </aside>
    <section class="rant-content">
      {{textarea placeholder="Start your rant" autofocus="true" value=bodyCopy rows="13"}}
    </section>
  </form>
</main>
